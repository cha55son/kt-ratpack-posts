<h1>Users New</h1>
<form method="POST" action="/users">
    <div class="group">
        <label>First Name</label>
        <input name="firstName">
    </div>
    <div class="group">
        <label>Last Name</label>
        <input name="lastName">
    </div>
    <div class="group">
        <label>Email</label>
        <input name="email">
    </div>
    <div class="group">
        <label>Password</label>
        <input name="password">
    </div>
    <button type="submit">Create User</button>
</form>